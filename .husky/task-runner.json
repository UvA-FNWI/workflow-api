{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
      {
         "name": "dotnet-format-staged-files",
         "group": "pre-commit-operations",
         "command": "dotnet",
         "args": ["jb", "cleanupcode", "${staged}"],
         "include": ["**/*.cs"]
      },
      {
         "name": "add-ticket-key-to-commit-message",
         "group": "pre-commit-operations",
         "command": "dotnet",
         "args": ["husky", "exec", ".husky/commit-prefixer.csx", "--args", "${args}"]
      }
   ]
}
