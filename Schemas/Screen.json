{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Screen",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "entityType": {
      "type": [
        "null",
        "string"
      ]
    },
    "columns": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Column"
      }
    },
    "relation": {
      "type": [
        "null",
        "string"
      ]
    }
  },
  "definitions": {
    "Column": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "filterType": {
          "$ref": "#/definitions/FilterType"
        },
        "displayType": {
          "$ref": "#/definitions/DisplayType"
        },
        "defaultSort": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/SortDirection"
            }
          ]
        },
        "link": {
          "type": "boolean"
        },
        "property": {
          "type": [
            "null",
            "string"
          ]
        },
        "value": {
          "type": [
            "null",
            "string"
          ]
        },
        "href": {
          "type": [
            "null",
            "string"
          ]
        },
        "title": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/BilingualString"
                }
              ]
            }
          ]
        },
        "default": {
          "type": [
            "null",
            "string"
          ]
        },
        "endDate": {
          "type": [
            "null",
            "string"
          ]
        },
        "currentStep": {
          "type": "boolean"
        }
      }
    },
    "FilterType": {
      "type": "string",
      "enum": [
        "None",
        "Pick"
      ]
    },
    "DisplayType": {
      "type": "string",
      "enum": [
        "Normal",
        "ExportOnly"
      ]
    },
    "SortDirection": {
      "type": "string",
      "enum": [
        "Ascending",
        "Descending"
      ]
    },
    "BilingualString": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "en": {
          "type": "string"
        },
        "nl": {
          "type": "string"
        }
      }
    }
  }
}