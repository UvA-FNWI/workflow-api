{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Screen",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Internal name of the screen"
    },
    "workflowDefinition": {
      "type": [
        "null",
        "string"
      ],
      "description": "WorkflowDefinition this screen is used for"
    },
    "columns": {
      "type": "array",
      "description": "List of columns to display on this screen",
      "items": {
        "$ref": "#/definitions/Column"
      }
    },
    "relation": {
      "type": [
        "null",
        "string"
      ],
      "description": "Relation this screen is used for"
    }
  },
  "definitions": {
    "Column": {
      "title": "Column",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "filterType": {
          "description": "Determines whether this column can be used for filtering",
          "$ref": "#/definitions/FilterType"
        },
        "displayType": {
          "description": "Determines whether this column is visible in the user interface or only in the export",
          "$ref": "#/definitions/DisplayType"
        },
        "defaultSort": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Sets a default sort direction for this column",
              "$ref": "#/definitions/SortDirection"
            }
          ]
        },
        "link": {
          "type": "boolean",
          "description": "If true, this column becomes a link to the instance"
        },
        "property": {
          "type": [
            "null",
            "string"
          ],
          "description": "Property this field refers to"
        },
        "value": {
          "type": [
            "null",
            "string"
          ],
          "description": "Custom value template"
        },
        "href": {
          "type": [
            "null",
            "string"
          ],
          "description": "Url the field should refer to"
        },
        "default": {
          "type": [
            "null",
            "string"
          ],
          "description": "Default value to use if the target is empty"
        },
        "title": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        },
        "endDate": {
          "type": [
            "null",
            "string"
          ],
          "description": "Target step the field should show the end date of"
        },
        "currentStep": {
          "type": "boolean",
          "description": "If true, display the current step in this field"
        }
      }
    },
    "FilterType": {
      "type": "string",
      "enum": [
        "None",
        "Pick"
      ]
    },
    "DisplayType": {
      "type": "string",
      "enum": [
        "Normal",
        "ExportOnly"
      ]
    },
    "SortDirection": {
      "type": "string",
      "enum": [
        "Ascending",
        "Descending"
      ]
    },
    "BilingualString": {
      "title": "BilingualString",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "en",
        "nl"
      ],
      "properties": {
        "en": {
          "type": "string"
        },
        "nl": {
          "type": "string"
        }
      }
    }
  }
}