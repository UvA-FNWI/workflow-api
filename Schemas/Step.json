{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Step",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "title": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        }
      ]
    },
    "children": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "condition": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "#/definitions/Condition"
        }
      ]
    },
    "actions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Action"
      }
    },
    "ends": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "#/definitions/Condition"
        }
      ]
    },
    "properties": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/Question"
      }
    }
  },
  "definitions": {
    "BilingualString": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "en": {
          "type": "string"
        },
        "nl": {
          "type": "string"
        }
      }
    },
    "Condition": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "not": {
          "type": "boolean"
        },
        "value": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Value"
            }
          ]
        },
        "logical": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Logical"
            }
          ]
        },
        "event": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/EventCondition"
                }
              ]
            }
          ]
        },
        "date": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Date"
            }
          ]
        },
        "name": {
          "type": [
            "null",
            "string"
          ]
        },
        "message": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/BilingualString"
                }
              ]
            }
          ]
        }
      }
    },
    "Value": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "property": {
          "type": "string"
        },
        "equal": {
          "type": [
            "null",
            "string"
          ]
        },
        "lessThan": {
          "type": [
            "null",
            "string"
          ]
        },
        "greaterThan": {
          "type": [
            "null",
            "string"
          ]
        },
        "greaterThanOrEqual": {
          "type": [
            "null",
            "string"
          ]
        }
      }
    },
    "Logical": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "operator": {
          "$ref": "#/definitions/LogicalOperator"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Condition"
          }
        }
      }
    },
    "LogicalOperator": {
      "type": "string",
      "enum": [
        "And",
        "Or"
      ]
    },
    "EventCondition": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        }
      }
    },
    "Date": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "source": {
          "type": "string"
        }
      }
    },
    "Action": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": [
            "null",
            "string"
          ]
        },
        "label": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/BilingualString"
                }
              ]
            }
          ]
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "form": {
          "type": [
            "null",
            "string"
          ]
        },
        "forms": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "collections": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "question": {
          "type": [
            "null",
            "string"
          ]
        },
        "entity": {
          "type": [
            "null",
            "string"
          ]
        },
        "type": {
          "$ref": "#/definitions/RoleAction"
        },
        "condition": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Condition"
            }
          ]
        },
        "triggers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Trigger"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "property": {
          "type": [
            "null",
            "string"
          ]
        },
        "userProperty": {
          "type": [
            "null",
            "string"
          ]
        },
        "limit": {
          "type": [
            "integer",
            "null"
          ]
        }
      }
    },
    "RoleAction": {
      "type": "string",
      "enum": [
        "View",
        "Submit",
        "Edit",
        "Undo",
        "ViewAdminTools",
        "Execute",
        "ViewHidden",
        "ViewUsers",
        "ViewStates",
        "Delete",
        "AddInstanceMessage",
        "ViewAnswerMessages",
        "AssignMessages",
        "CreateInstance",
        "CreateRelatedInstance"
      ]
    },
    "Trigger": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "condition": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Condition"
            }
          ]
        },
        "sendMail": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/SendMessage"
            }
          ]
        },
        "http": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Http"
            }
          ]
        },
        "setProperty": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/SetProperty"
            }
          ]
        },
        "event": {
          "type": [
            "null",
            "string"
          ]
        },
        "undoEvent": {
          "type": [
            "null",
            "string"
          ]
        }
      }
    },
    "SendMessage": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "to": {
          "type": [
            "null",
            "string"
          ]
        },
        "toAddress": {
          "type": [
            "null",
            "string"
          ]
        },
        "subject": {
          "type": [
            "null",
            "string"
          ]
        },
        "body": {
          "type": [
            "null",
            "string"
          ]
        },
        "template": {
          "type": [
            "null",
            "string"
          ]
        },
        "sendAsMail": {
          "type": "boolean"
        },
        "sendAutomatically": {
          "type": "boolean"
        },
        "attachments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Attachment"
          }
        }
      }
    },
    "Attachment": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "template": {
          "type": "string"
        }
      }
    },
    "Http": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string"
        }
      }
    },
    "SetProperty": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "target": {
          "type": [
            "null",
            "string"
          ]
        },
        "property": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "Question": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Internal name of the question"
        },
        "text": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Localized text of the question",
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/BilingualString"
                }
              ]
            }
          ]
        },
        "kind": {
          "description": "Set if this question is hidden from users without extra permissions",
          "$ref": "#/definitions/QuestionKind"
        },
        "layout": {
          "description": "Specific layout options for the data type",
          "oneOf": [
            {
              "$ref": "#/definitions/ChoiceLayoutOptions"
            },
            {
              "$ref": "#/definitions/StringLayoutOptions"
            }
          ]
        },
        "shortText": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Localized short question text to shown in results",
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/BilingualString"
                }
              ]
            }
          ]
        },
        "type": {
          "type": "string",
          "description": "Data type of the question. Can be a primitive type String, Int, Double, DateTime, Date, User, Currency, File,\n            or a reference to a value set or another entity type. Use [Type] to indicate an array and Type! to indicate\n            a required value."
        },
        "values": {
          "type": [
            "null",
            "object"
          ],
          "description": "Values for a choice question.",
          "additionalProperties": {
            "$ref": "#/definitions/Choice"
          }
        },
        "description": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Localized extended description text for the question.",
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/BilingualString"
                }
              ]
            }
          ]
        },
        "condition": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Condition that determines if the question should be shown",
              "$ref": "#/definitions/Condition"
            }
          ]
        },
        "validation": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Condition that determines if the value is valid",
              "$ref": "#/definitions/Condition"
            }
          ]
        },
        "onSave": {
          "type": "array",
          "description": "Trigger that is run whenever a value is changed for this property",
          "items": {
            "$ref": "#/definitions/Trigger"
          }
        },
        "hideInResults": {
          "type": "boolean",
          "description": "Determines if the question should be hidden in the results table"
        },
        "table": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/TableSettings"
            }
          ]
        }
      }
    },
    "QuestionKind": {
      "type": "string",
      "enum": [
        "Normal",
        "Hidden"
      ]
    },
    "ChoiceLayoutOptions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "description": "Set if the question should be shown as dropdown or radio list",
          "$ref": "#/definitions/ChoiceLayoutType"
        }
      }
    },
    "ChoiceLayoutType": {
      "type": "string",
      "enum": [
        "Dropdown",
        "RadioList"
      ]
    },
    "StringLayoutOptions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "multiline": {
          "type": "boolean",
          "description": "Set if the question should be a multiline text field"
        },
        "allowAttachments": {
          "type": "boolean",
          "description": "Set if the text field should allow attachments"
        }
      }
    },
    "Choice": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "text": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/BilingualString"
                }
              ]
            }
          ]
        },
        "description": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/BilingualString"
                }
              ]
            }
          ]
        },
        "value": {
          "type": [
            "null",
            "number"
          ]
        },
        "condition": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Condition"
            }
          ]
        }
      }
    },
    "TableSettings": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "form": {
          "type": "string"
        },
        "layout": {
          "$ref": "#/definitions/TableLayout"
        }
      }
    },
    "TableLayout": {
      "type": "string",
      "enum": [
        "InlineEditing",
        "Modal"
      ]
    }
  }
}