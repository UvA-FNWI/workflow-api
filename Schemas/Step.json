      "properties": {
        "en": {
          "type": "string"
        },
        "nl": {
          "type": "string"
        }
      }
    },
    "StepHierarchyMode": {
      "type": "string",
      "enum": [
        "Sequential",
        "Parallel"
      ]
    },
    "Condition": {
      "title": "Condition",
      "type": "object",
      "description": "Represents a logical condition",
      "additionalProperties": false,
      "properties": {
        "not": {
          "type": "boolean",
          "description": "If true, this condition is inverted"
        },
        "value": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Compare property values",
              "$ref": "#/definitions/Value"
            }
          ]
        },
        "logical": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "For and/or constructs",
              "$ref": "#/definitions/Logical"
            }
          ]
        },
        "event": {
          "description": "Check if an event has occurred",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/EventCondition"
            }
          ]
        },
        "date": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Check if a date has passed",
              "$ref": "#/definitions/Date"
            }
          ]
        },
        "deadline": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Check if a deadline has passed",
              "$ref": "#/definitions/Deadline"
            }
          ]
        },
        "name": {
          "type": [
            "null",
            "string"
          ],
          "description": "Use a named reusable condition"
        },
        "message": {
          "description": "Message that is shown then the condition is not, for use in form validation",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        }
      }
    },
    "Value": {
      "title": "Value",
      "type": "object",
      "description": "Represents a value comparison. Use this to compare two properties, or to compare a property to a fixed literal value\n            (prefix the value with an equals sign to indicate a literal value)",
      "additionalProperties": false,
      "required": [
        "property"
      ],
      "properties": {
        "property": {
          "type": "string",
          "description": "Target property"
        },
        "equal": {
          "type": [
            "null",
            "string"
          ],
          "description": "Value the property should be equal to. If this is a literal value, it must be prefixed with an equals sign"
        },
        "lessThan": {
          "type": [
            "null",
            "string"
          ],
          "description": "Value the property should be less than. If this is a literal value, it must be prefixed with an equals sign"
        },
        "greaterThan": {
          "type": [
            "null",
            "string"
          ],
          "description": "Value the property should be greater than. If this is a literal value, it must be prefixed with an equals sign"
        },
        "greaterThanOrEqual": {
          "type": [
            "null",
            "string"
          ],
          "description": "Value the property should be greater than or equal to. If this is a literal value, it must be prefixed with an equals sign"
        },
        "in": {
          "type": [
            "null",
            "string"
          ],
          "description": "Array the property should be in"
        },
        "isEmpty": {
          "type": [
            "boolean",
            "null"
          ],
          "description": "If set, check whether the property is empty"
        }
      }
    },
    "Logical": {
      "title": "Logical",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "operator": {
          "$ref": "#/definitions/LogicalOperator"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Condition"
          }
        }
      }
    },
    "LogicalOperator": {
      "type": "string",
      "enum": [
        "And",
        "Or"
      ]
    },
    "EventCondition": {
      "title": "EventCondition",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Id of the event to check for"
        },
        "notBefore": {
          "type": [
            "null",
            "string"
          ],
          "description": "If set, the event should not have occurred before this event"
        }
      }
    },
    "Date": {
      "title": "Date",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "source"
      ],
      "properties": {
        "source": {
          "type": "string"
        }
      }
    },
    "Deadline": {
      "title": "Deadline",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "expressionText"
      ],
      "properties": {
        "expressionText": {
          "type": "string"
        }
      }
    },
    "Action": {
      "title": "Action",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": [
            "null",
            "string"
          ],
          "description": "Internal name of the action. Required for actions of type execute"
        },
        "label": {
          "description": "Localized label of the action as shown in the user interface",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        },
        "intent": {
          "$ref": "#/definitions/ActionIntent"
        },
        "roles": {
          "type": "array",
          "description": "List of roles that can perform this action",
          "items": {
            "type": "string"
          }
        },
        "form": {
          "type": [
            "null",
            "string"
          ],
          "description": "Target form for View / Submit / Edit actions"
        },
        "forms": {
          "type": "array",
          "description": "List of target forms for View / Submit / Edit actions",
          "items": {
            "type": "string"
          }
        },
        "collections": {
          "type": "array",
          "description": "List of target collections for ??? (not yet implemented)",
          "items": {
            "type": "string"
          }
        },
        "propertyDefinition": {
          "type": [
            "null",
            "string"
          ],
          "description": "Target propertyDefinition for the view hidden propertyDefinition action"
        },
        "workflowDefinition": {
          "type": [
            "null",
            "string"
          ]
        },
        "type": {
          "description": "Type of action",
          "$ref": "#/definitions/RoleAction"
        },
        "condition": {
          "description": "Condition that determines whether the action is permitted",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/Condition"
            }
          ]
        },
        "onAction": {
          "type": "array",
          "description": "List of effects to run for an Execute action",
          "items": {
            "$ref": "#/definitions/Effect"
          }
        },
        "steps": {
          "type": "array",
          "description": "List of steps during which this action is permitted",
          "items": {
            "type": "string"
          }
        },
        "property": {
          "type": [
            "null",
            "string"
          ],
          "description": "Target property for the CreateRelatedInstance action"
        },
        "userProperty": {
          "type": [
            "null",
            "string"
          ],
          "description": "Weird thing, maybe we should get rid of this?"
        },
        "limit": {
          "type": [
            "integer",
            "null"
          ],
          "description": "Weird thing, maybe we should get rid of this?"
        }
