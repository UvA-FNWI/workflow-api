{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Form",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "Internal name of the form"
    },
    "title": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "description": "Bilingual title of the form",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        }
      ]
    },
    "layout": {
      "$ref": "#/definitions/FormLayout"
    },
    "property": {
      "type": [
        "null",
        "string"
      ],
      "description": "Target reference property. Set this to use the form to update the properties of the referenced entity"
    },
    "targetForm": {
      "type": [
        "null",
        "string"
      ],
      "description": "To be used in combination with Property. The name of a form for the referenced entity type"
    },
    "pages": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/Page"
      }
    },
    "onSubmit": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Trigger"
      }
    },
    "onSave": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Trigger"
      }
    }
  },
  "definitions": {
    "BilingualString": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "en": {
          "type": "string"
        },
        "nl": {
          "type": "string"
        }
      }
    },
    "FormLayout": {
      "type": "string",
      "enum": [
        "Normal",
        "SinglePage"
      ]
    },
    "Page": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "title": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/BilingualString"
                }
              ]
            }
          ]
        },
        "introduction": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/BilingualString"
                }
              ]
            }
          ]
        },
        "layout": {
          "$ref": "#/definitions/PageLayout"
        },
        "questions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sources": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "PageLayout": {
      "type": "string",
      "enum": [
        "Normal",
        "Condensed"
      ]
    },
    "Trigger": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "condition": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Condition"
            }
          ]
        },
        "sendMail": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/SendMessage"
            }
          ]
        },
        "http": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Http"
            }
          ]
        },
        "setProperty": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/SetProperty"
            }
          ]
        },
        "event": {
          "type": [
            "null",
            "string"
          ]
        },
        "undoEvent": {
          "type": [
            "null",
            "string"
          ]
        }
      }
    },
    "Condition": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "not": {
          "type": "boolean"
        },
        "value": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Value"
            }
          ]
        },
        "logical": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Logical"
            }
          ]
        },
        "event": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/EventCondition"
                }
              ]
            }
          ]
        },
        "date": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Date"
            }
          ]
        },
        "name": {
          "type": [
            "null",
            "string"
          ]
        },
        "message": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "oneOf": [
                {
                  "type": "null"
                },
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/BilingualString"
                }
              ]
            }
          ]
        }
      }
    },
    "Value": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "property": {
          "type": "string"
        },
        "equal": {
          "type": [
            "null",
            "string"
          ]
        },
        "lessThan": {
          "type": [
            "null",
            "string"
          ]
        },
        "greaterThan": {
          "type": [
            "null",
            "string"
          ]
        },
        "greaterThanOrEqual": {
          "type": [
            "null",
            "string"
          ]
        }
      }
    },
    "Logical": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "operator": {
          "$ref": "#/definitions/LogicalOperator"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Condition"
          }
        }
      }
    },
    "LogicalOperator": {
      "type": "string",
      "enum": [
        "And",
        "Or"
      ]
    },
    "EventCondition": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        }
      }
    },
    "Date": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "source": {
          "type": "string"
        }
      }
    },
    "SendMessage": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "to": {
          "type": [
            "null",
            "string"
          ]
        },
        "toAddress": {
          "type": [
            "null",
            "string"
          ]
        },
        "subject": {
          "type": [
            "null",
            "string"
          ]
        },
        "body": {
          "type": [
            "null",
            "string"
          ]
        },
        "template": {
          "type": [
            "null",
            "string"
          ]
        },
        "sendAsMail": {
          "type": "boolean"
        },
        "sendAutomatically": {
          "type": "boolean"
        },
        "attachments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Attachment"
          }
        }
      }
    },
    "Attachment": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "template": {
          "type": "string"
        }
      }
    },
    "Http": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string"
        }
      }
    },
    "SetProperty": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "target": {
          "type": [
            "null",
            "string"
          ]
        },
        "property": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    }
  }
}