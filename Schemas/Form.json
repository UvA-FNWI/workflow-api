{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Form",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Internal name of the form"
    },
    "title": {
      "description": "Bilingual title of the form",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/BilingualString"
        }
      ]
    },
    "layout": {
      "description": "Sets whether this form shows as multi-page layout with navigation bor or shows all pages at once",
      "$ref": "#/definitions/FormLayout"
    },
    "property": {
      "type": [
        "null",
        "string"
      ],
      "description": "Target reference property. Set this to use the form to update the properties of the referenced entity"
    },
    "targetForm": {
      "type": [
        "null",
        "string"
      ],
      "description": "To be used in combination with Property. The name of a form for the referenced entity type"
    },
    "pages": {
      "type": "object",
      "description": "Dictionary of pages of this form",
      "additionalProperties": {
        "$ref": "#/definitions/Page"
      }
    },
    "onSubmit": {
      "type": "array",
      "description": "Triggers to run when the form is submitted",
      "items": {
        "$ref": "#/definitions/Trigger"
      }
    },
    "onSave": {
      "type": "array",
      "description": "Triggers to run when a change is made in the form",
      "items": {
        "$ref": "#/definitions/Trigger"
      }
    }
  },
  "definitions": {
    "BilingualString": {
      "title": "BilingualString",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "en",
        "nl"
      ],
      "properties": {
        "en": {
          "type": "string"
        },
        "nl": {
          "type": "string"
        }
      }
    },
    "FormLayout": {
      "type": "string",
      "enum": [
        "Normal",
        "SinglePage"
      ]
    },
    "Page": {
      "title": "Page",
      "type": "object",
      "description": "Represents a page in a form",
      "additionalProperties": false,
      "properties": {
        "title": {
          "description": "Localized title of the page",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        },
        "introduction": {
          "description": "Localized introduction text to show at the start of the page",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        },
        "layout": {
          "description": "Layout of the page. Condensed will show the questions in a table",
          "$ref": "#/definitions/PageLayout"
        },
        "questions": {
          "type": "array",
          "description": "Question names to include in the page",
          "items": {
            "type": "string"
          }
        },
        "sources": {
          "type": [
            "array",
            "null"
          ],
          "description": "If set, this page is included only when editing a matching property",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "PageLayout": {
      "type": "string",
      "enum": [
        "Normal",
        "Condensed"
      ]
    },
    "Trigger": {
      "title": "Trigger",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "condition": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Condition that determines if this trigger is active",
              "$ref": "#/definitions/Condition"
            }
          ]
        },
        "sendMail": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Send an email",
              "$ref": "#/definitions/SendMessage"
            }
          ]
        },
        "http": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Do an http call to an external service",
              "$ref": "#/definitions/Http"
            }
          ]
        },
        "setProperty": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Set a property on the current instance",
              "$ref": "#/definitions/SetProperty"
            }
          ]
        },
        "event": {
          "type": [
            "null",
            "string"
          ],
          "description": "Complete an event"
        },
        "undoEvent": {
          "type": [
            "null",
            "string"
          ],
          "description": "Undo an event"
        }
      }
    },
    "Condition": {
      "title": "Condition",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "not": {
          "type": "boolean"
        },
        "value": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Value"
            }
          ]
        },
        "logical": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Logical"
            }
          ]
        },
        "event": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/EventCondition"
            }
          ]
        },
        "date": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Date"
            }
          ]
        },
        "name": {
          "type": [
            "null",
            "string"
          ]
        },
        "message": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        }
      }
    },
    "Value": {
      "title": "Value",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "property"
      ],
      "properties": {
        "property": {
          "type": "string"
        },
        "equal": {
          "type": [
            "null",
            "string"
          ]
        },
        "lessThan": {
          "type": [
            "null",
            "string"
          ]
        },
        "greaterThan": {
          "type": [
            "null",
            "string"
          ]
        },
        "greaterThanOrEqual": {
          "type": [
            "null",
            "string"
          ]
        }
      }
    },
    "Logical": {
      "title": "Logical",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "operator": {
          "$ref": "#/definitions/LogicalOperator"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Condition"
          }
        }
      }
    },
    "LogicalOperator": {
      "type": "string",
      "enum": [
        "And",
        "Or"
      ]
    },
    "EventCondition": {
      "title": "EventCondition",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Id of the event to check for"
        },
        "notBefore": {
          "type": [
            "null",
            "string"
          ],
          "description": "If set, the event should not have occurred before this event"
        }
      }
    },
    "Date": {
      "title": "Date",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "source"
      ],
      "properties": {
        "source": {
          "type": "string"
        }
      }
    },
    "SendMessage": {
      "title": "SendMessage",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "to": {
          "type": [
            "null",
            "string"
          ]
        },
        "toAddress": {
          "type": [
            "null",
            "string"
          ]
        },
        "subject": {
          "type": [
            "null",
            "string"
          ]
        },
        "body": {
          "type": [
            "null",
            "string"
          ]
        },
        "template": {
          "type": [
            "null",
            "string"
          ]
        },
        "sendAsMail": {
          "type": "boolean"
        },
        "sendAutomatically": {
          "type": "boolean"
        },
        "attachments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Attachment"
          }
        }
      }
    },
    "Attachment": {
      "title": "Attachment",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "template"
      ],
      "properties": {
        "template": {
          "type": "string"
        }
      }
    },
    "Http": {
      "title": "Http",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "url"
      ],
      "properties": {
        "url": {
          "type": "string",
          "description": "Template for the url to call"
        }
      }
    },
    "SetProperty": {
      "title": "SetProperty",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "property",
        "value"
      ],
      "properties": {
        "property": {
          "type": "string",
          "description": "Target property name"
        },
        "value": {
          "type": "string",
          "description": "Expression that determines the value of the property"
        }
      }
    }
  }
}