{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "ValueSet",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "values": {
      "type": "object",
      "description": "Dictionary of choices within this value set",
      "additionalProperties": {
        "$ref": "#/definitions/Choice"
      }
    }
  },
  "definitions": {
    "Choice": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "text": {
          "description": "Localized text of the choice",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        },
        "description": {
          "description": "Localized extended description text for the choice",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        },
        "value": {
          "type": [
            "null",
            "number"
          ],
          "description": "Numeric value of the choice"
        },
        "condition": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Condition that determines if the choice should be shown",
              "$ref": "#/definitions/Condition"
            }
          ]
        }
      }
    },
    "BilingualString": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "en",
        "nl"
      ],
      "properties": {
        "en": {
          "type": "string"
        },
        "nl": {
          "type": "string"
        }
      }
    },
    "Condition": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "not": {
          "type": "boolean"
        },
        "value": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Value"
            }
          ]
        },
        "logical": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Logical"
            }
          ]
        },
        "event": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/EventCondition"
            }
          ]
        },
        "date": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "$ref": "#/definitions/Date"
            }
          ]
        },
        "name": {
          "type": [
            "null",
            "string"
          ]
        },
        "message": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        }
      }
    },
    "Value": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "property"
      ],
      "properties": {
        "property": {
          "type": "string"
        },
        "equal": {
          "type": [
            "null",
            "string"
          ]
        },
        "lessThan": {
          "type": [
            "null",
            "string"
          ]
        },
        "greaterThan": {
          "type": [
            "null",
            "string"
          ]
        },
        "greaterThanOrEqual": {
          "type": [
            "null",
            "string"
          ]
        }
      }
    },
    "Logical": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "operator": {
          "$ref": "#/definitions/LogicalOperator"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Condition"
          }
        }
      }
    },
    "LogicalOperator": {
      "type": "string",
      "enum": [
        "And",
        "Or"
      ]
    },
    "EventCondition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string"
        }
      }
    },
    "Date": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "source"
      ],
      "properties": {
        "source": {
          "type": "string"
        }
      }
    }
  }
}