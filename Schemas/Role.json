        "string"
      ]
    },
    "shortName": {
      "type": [
        "null",
        "string"
      ]
    },
    "title": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        }
      ]
    },
    "inheritFrom": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
