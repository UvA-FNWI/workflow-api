{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Role",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Internal name of this role"
    },
    "title": {
      "description": "Localized title of the role shown to the user",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string"
        },
        {
          "$ref": "#/definitions/BilingualString"
        }
      ]
    },
    "inheritFrom": {
      "type": "array",
      "description": "List of roles to inherit actions from",
      "items": {
        "type": "string"
      }
    },
    "actions": {
      "type": "array",
      "description": "List of global actions for this role",
      "items": {
        "$ref": "#/definitions/Action"
      }
    }
  },
  "definitions": {
    "BilingualString": {
      "title": "BilingualString",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "en",
        "nl"
      ],
      "properties": {
        "en": {
          "type": "string"
        },
        "nl": {
          "type": "string"
        }
      }
    },
    "Action": {
      "title": "Action",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": [
            "null",
            "string"
          ],
          "description": "Internal name of the action"
        },
        "label": {
          "description": "Localized label of the action as shown in the user interface",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        },
        "roles": {
          "type": "array",
          "description": "List of roles that can perform this action",
          "items": {
            "type": "string"
          }
        },
        "form": {
          "type": [
            "null",
            "string"
          ],
          "description": "Target form for View / Submit / Edit actions"
        },
        "forms": {
          "type": "array",
          "description": "List of target forms for View / Submit / Edit actions",
          "items": {
            "type": "string"
          }
        },
        "collections": {
          "type": "array",
          "description": "List of target collections for ??? (not yet implemented)",
          "items": {
            "type": "string"
          }
        },
        "question": {
          "type": [
            "null",
            "string"
          ],
          "description": "Target question for the view hidden question action"
        },
        "entity": {
          "type": [
            "null",
            "string"
          ],
          "description": "Entity type this action applies to"
        },
        "type": {
          "description": "Type of action",
          "$ref": "#/definitions/RoleAction"
        },
        "condition": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Condition that determines whether the action is permitted",
              "$ref": "#/definitions/Condition"
            }
          ]
        },
        "triggers": {
          "type": "array",
          "description": "List of triggers to run for an Execute action",
          "items": {
            "$ref": "#/definitions/Trigger"
          }
        },
        "steps": {
          "type": "array",
          "description": "List of steps during which this action is permitted",
          "items": {
            "type": "string"
          }
        },
        "property": {
          "type": [
            "null",
            "string"
          ],
          "description": "Target property for the CreateRelatedInstance action"
        },
        "userProperty": {
          "type": [
            "null",
            "string"
          ],
          "description": "Weird thing, maybe we should get rid of this?"
        },
        "limit": {
          "type": [
            "integer",
            "null"
          ],
          "description": "Weird thing, maybe we should get rid of this?"
        }
      }
    },
    "RoleAction": {
      "type": "string",
      "enum": [
        "View",
        "Submit",
        "Edit",
        "Undo",
        "ViewAdminTools",
        "Execute",
        "ViewHidden",
        "ViewUsers",
        "ViewStates",
        "Delete",
        "AddInstanceMessage",
        "ViewAnswerMessages",
        "AssignMessages",
        "CreateInstance",
        "CreateRelatedInstance"
      ]
    },
    "Condition": {
      "title": "Condition",
      "type": "object",
      "description": "Represents a logical condition",
      "additionalProperties": false,
      "properties": {
        "not": {
          "type": "boolean",
          "description": "If true, this condition is inverted"
        },
        "value": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Compare property values",
              "$ref": "#/definitions/Value"
            }
          ]
        },
        "logical": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "For and/or constructs",
              "$ref": "#/definitions/Logical"
            }
          ]
        },
        "event": {
          "description": "Check if an event has occurred",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/EventCondition"
            }
          ]
        },
        "date": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Check if a date has passed",
              "$ref": "#/definitions/Date"
            }
          ]
        },
        "name": {
          "type": [
            "null",
            "string"
          ],
          "description": "Use a named reusable condition"
        },
        "message": {
          "description": "Message that is shown then the condition is not, for use in form validation",
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/BilingualString"
            }
          ]
        }
      }
    },
    "Value": {
      "title": "Value",
      "type": "object",
      "description": "Represents a value comparison. Use this to compare two properties, or to compare a property to a fixed literal value\n            (prefix the value with an equals sign to indicate a literal value)",
      "additionalProperties": false,
      "required": [
        "property"
      ],
      "properties": {
        "property": {
          "type": "string",
          "description": "Target property"
        },
        "equal": {
          "type": [
            "null",
            "string"
          ],
          "description": "Value the property should be equal to. If this is a literal value, it must be prefixed with an equals sign"
        },
        "lessThan": {
          "type": [
            "null",
            "string"
          ],
          "description": "Value the property should be less than. If this is a literal value, it must be prefixed with an equals sign"
        },
        "greaterThan": {
          "type": [
            "null",
            "string"
          ],
          "description": "Value the property should be greater than. If this is a literal value, it must be prefixed with an equals sign"
        },
        "greaterThanOrEqual": {
          "type": [
            "null",
            "string"
          ],
          "description": "Value the property should be greater than or equal to. If this is a literal value, it must be prefixed with an equals sign"
        }
      }
    },
    "Logical": {
      "title": "Logical",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "operator": {
          "$ref": "#/definitions/LogicalOperator"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Condition"
          }
        }
      }
    },
    "LogicalOperator": {
      "type": "string",
      "enum": [
        "And",
        "Or"
      ]
    },
    "EventCondition": {
      "title": "EventCondition",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Id of the event to check for"
        },
        "notBefore": {
          "type": [
            "null",
            "string"
          ],
          "description": "If set, the event should not have occurred before this event"
        }
      }
    },
    "Date": {
      "title": "Date",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "source"
      ],
      "properties": {
        "source": {
          "type": "string"
        }
      }
    },
    "Trigger": {
      "title": "Trigger",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "condition": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Condition that determines if this trigger is active",
              "$ref": "#/definitions/Condition"
            }
          ]
        },
        "sendMail": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Send an email",
              "$ref": "#/definitions/SendMessage"
            }
          ]
        },
        "http": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Do an http call to an external service",
              "$ref": "#/definitions/Http"
            }
          ]
        },
        "setProperty": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "description": "Set a property on the current instance",
              "$ref": "#/definitions/SetProperty"
            }
          ]
        },
        "event": {
          "type": [
            "null",
            "string"
          ],
          "description": "Complete an event"
        },
        "undoEvent": {
          "type": [
            "null",
            "string"
          ],
          "description": "Undo an event"
        }
      }
    },
    "SendMessage": {
      "title": "SendMessage",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "to": {
          "type": [
            "null",
            "string"
          ]
        },
        "toAddress": {
          "type": [
            "null",
            "string"
          ]
        },
        "subject": {
          "type": [
            "null",
            "string"
          ]
        },
        "body": {
          "type": [
            "null",
            "string"
          ]
        },
        "template": {
          "type": [
            "null",
            "string"
          ]
        },
        "sendAsMail": {
          "type": "boolean"
        },
        "sendAutomatically": {
          "type": "boolean"
        },
        "attachments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Attachment"
          }
        }
      }
    },
    "Attachment": {
      "title": "Attachment",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "template"
      ],
      "properties": {
        "template": {
          "type": "string"
        }
      }
    },
    "Http": {
      "title": "Http",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "url"
      ],
      "properties": {
        "url": {
          "type": "string",
          "description": "Template for the url to call"
        }
      }
    },
    "SetProperty": {
      "title": "SetProperty",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "property",
        "value"
      ],
      "properties": {
        "property": {
          "type": "string",
          "description": "Target property name"
        },
        "value": {
          "type": "string",
          "description": "Expression that determines the value of the property"
        }
      }
    }
  }
}